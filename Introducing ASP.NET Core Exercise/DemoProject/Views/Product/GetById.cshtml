@model ProductViewModel
@{
    ViewBag.Title = $"Product {Model.Name}";
}

<div class="row">
    <div class="col-5">
        <div class="card">
            <div class="card-header">Product N. @Model.Id</div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <h3>Product Name: @Model.Name</h3>
                    Price: @Model.Price lv.
                </li>
            </ul>
        </div>
    </div>
</div>
